CREATE DATABASE  IF NOT EXISTS `Customer_Manager`;
USE `Customer_Manager`;
--
-- Table structure for table `student`
--

DROP TABLE IF EXISTS `Subscriptions`;

CREATE TABLE `Subscriptions` (
  `Subscription_ID` int(11) NOT NULL AUTO_INCREMENT,
  `Customer_ID` varchar(45) DEFAULT NULL,
  `Subscription_purchase_date` varchar(45) DEFAULT NULL,
  `Balance` float(53) DEFAULT NULL,
  `Type` int(11) DEFAULT NULL,
  PRIMARY KEY (`Subscription_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=latin1;

DROP TABLE IF EXISTS `Purchases`;

CREATE TABLE `Purchases` (
  `Purchase_ID` int(11) NOT NULL AUTO_INCREMENT,
  `Customer_ID` varchar(45) DEFAULT NULL,
  `Purchase_date` varchar (45) DEFAULT NULL,
  `Amount` float(53) DEFAULT NULL,
  `New_balance` int(11) DEFAULT NULL,
  PRIMARY KEY (`Purchase_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=latin1;

DROP TABLE IF EXISTS `Customers`;

CREATE TABLE `Customers` (
  `Customer_ID` int(11) NOT NULL AUTO_INCREMENT,
  `First_name` varchar(45) DEFAULT NULL,
  `Last_name` varchar(45) DEFAULT NULL,
  `Mail` varchar(45) DEFAULT NULL,
  `Phone` varchar(45) DEFAULT NULL,
  PRIMARY KEY (`Customer_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=latin1;


